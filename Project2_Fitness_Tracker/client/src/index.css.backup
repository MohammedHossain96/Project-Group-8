/* Backup of original index.css */
:root {
  font-family: Inter, system-ui, Avenir, Helvetica, Arial, sans-serif;
  line-height: 1.5;
  font-weight: 400;

  color-scheme: light dark;
  /* Adjusted default text color for better contrast on gradient */
  color: rgba(255, 255, 255, 0.9);

  font-synthesis: none;
  text-rendering: optimizeLegibility;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

@keyframes gradientAnimation {
  0% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
  100% { background-position: 0% 50%; }
}

a {
  font-weight: 500;
  color: #a0a8ff; /* Lighter blue for better visibility */
  text-decoration: inherit;
}
a:hover {
  color: #747bff;
}

body {
  margin: 0;
  display: flex;
  flex-direction: column;
  min-width: 320px;
  min-height: 100vh;
  /* Animated Gradient Background */
  background: linear-gradient(-45deg, #ee7752, #e73c7e, #23a6d5, #23d5ab);
  background-size: 400% 400%;
  animation: gradientAnimation 15s ease infinite;
}

/* Make sure the root element takes full width */
#root {
  width: 100%;
  display: flex;
  flex-direction: column;
}

/* Container adjustments */
.container {
  width: 100%;
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 15px;
  box-sizing: border-box;
}

h1 {
  font-size: 3.2em;
  line-height: 1.1;
  color: #fff; /* Ensure headings are white */
  text-shadow: 1px 1px 3px rgba(0,0,0,0.2); /* Subtle shadow */
}

/* Glassmorphism effect for cards and forms */
.card, .form, nav {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px); /* Safari support */
  border-radius: 15px;
  border: 1px solid rgba(255, 255, 255, 0.2);
  box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
  padding: 20px; /* Add padding */
  margin-bottom: 20px; /* Add space between cards */
  color: #fff; /* Ensure text inside is white */
  width: 100%; /* Make cards take full width of their container */
  box-sizing: border-box; /* Include padding in width calculation */
}

/* Special handling for navbar */
nav {
  width: 100%;
  border-radius: 0 0 15px 15px;
  margin-bottom: 30px;
  padding: 0;
  position: sticky;
  top: 0;
  z-index: 100;
}

nav .container {
  padding: 0 20px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 64px;
}

/* Adjust card titles if needed */
.card .card-title {
    color: #fff; /* Ensure card titles are white */
    font-weight: 500;
}

/* Make links in nav more visible */
nav a {
  color: white !important;
  font-weight: 600;
  text-shadow: 0 1px 2px rgba(0,0,0,0.2);
}

nav ul li {
  display: inline-block;
  margin: 0 10px;
}

/* Style form elements for better contrast */
.form label {
    color: #eee; /* Lighter label color */
    display: block;
    margin-bottom: 5px;
}

.form input[type="text"],
.form input[type="password"],
.textarea, .materialize-textarea {
    background: rgba(255, 255, 255, 0.1) !important;
    border: 1px solid rgba(255, 255, 255, 0.2) !important;
    border-radius: 8px !important;
    padding: 10px !important;
    color: #fff !important;
    width: calc(100% - 22px); /* Adjust width considering padding */
    margin-bottom: 15px;
}

.form input::placeholder, .textarea::placeholder, .materialize-textarea::placeholder {
    color: rgba(255, 255, 255, 0.7) !important;
}

button, .btn {
  border-radius: 8px;
  border: 1px solid transparent;
  padding: 0.6em 1.2em;
  font-size: 1em;
  font-weight: 500;
  font-family: inherit;
  /* Adjusted button background for glass theme */
  background-color: rgba(255, 255, 255, 0.2);
  color: #fff; /* Button text color */
  cursor: pointer;
  transition: background-color 0.25s, border-color 0.25s;
}
button:hover, .btn:hover {
  border-color: #a0a8ff;
  background-color: rgba(255, 255, 255, 0.3);
}
button:focus,
button:focus-visible,
.btn:focus,
.btn:focus-visible {
  outline: 4px auto -webkit-focus-ring-color;
}
